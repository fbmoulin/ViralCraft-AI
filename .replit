modules = ["nodejs-20", "web"]
run = "node index.js"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd ViralCraft-AI && npm start"]

[workflows]
runButton = "Production Server"

[[workflows.workflow]]
name = "Start Server"
author = 36007645
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ViralCraft-AI && npm start"

[[workflows.workflow]]
name = "Production Server"
author = 36007645
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ViralCraft-AI && npm install --production"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ViralCraft-AI && npm start"

[[workflows.workflow]]
name = "Development Mode"
author = 36007645
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ViralCraft-AI && npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ViralCraft-AI && npm run dev"

[[workflows.workflow]]
name = "Database Setup"
author = 36007645
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ViralCraft-AI && node scripts/setup-db.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Database initialized successfully\""

[[workflows.workflow]]
name = "Quick Start"
author = 36007645
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ViralCraft-AI && npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Viral Content Creator is starting...\""

[[workflows.workflow]]
name = "Light Database Setup"
author = 36007645
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ViralCraft-AI && node scripts/setup-light-db.js"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Light database initialized successfully\""

[[ports]]
localPort = 5000
externalPort = 80
